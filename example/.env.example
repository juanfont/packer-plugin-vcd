# VCD Connection Settings
# Copy this file to .env and fill in your values
# Then source it before running packer: source .env

export PKR_VAR_vcd_host="vcd.example.com"
export PKR_VAR_vcd_username="your-username"
export PKR_VAR_vcd_password="your-password"
export PKR_VAR_vcd_org="your-org"
export PKR_VAR_vcd_vdc="your-vdc"
export PKR_VAR_vcd_network="your-network"
export PKR_VAR_vcd_insecure="true"

# VM Settings (optional - defaults are set in variables.pkr.hcl)
